# =============================================================================
# Environment Configuration
# Copy to .env and fill in values
# =============================================================================

# HuggingFace token (required for gated dataset)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Jupyter port (optional, default: 8888)
JUPYTER_PORT=8888

# Ollama URL (for scene classification)
# Examples:
#   Local:            http://localhost:11434
#   Docker host:      http://host.docker.internal:11434
#   Remote LAN:       http://192.168.1.100:11434
#   ngrok tunnel:     https://xxxxx.ngrok-free.app
OLLAMA_URL=http://localhost:11434
